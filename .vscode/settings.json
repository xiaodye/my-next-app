{
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "css.lint.unknownAtRules": "ignore",

  // tailwindcss 正则
  // 参考：https://dev.to/tiu/how-to-get-tailwind-intellisense-anywhere-53ej
  // Github: https://github.com/paolotiu/tailwind-intellisense-regex-list
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "\"([^\"]*)\""], // clsx
    // ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"], // cn
    ["cn\\(([^)]*)\\)", "\"([^\"]*)\""], // cn
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"], // cva
    ["(?:twMerge|twJoin)\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"] // twMerge
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "cSpell.words": ["clsx", "nextui", "tailwindcss"]
}
